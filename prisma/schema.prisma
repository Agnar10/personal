generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum AccountType {
  CASH
  DEBIT
  CREDIT
  SAVINGS
}

enum MatchType {
  CONTAINS
  STARTS_WITH
  ENDS_WITH
  REGEX
}

model User {
  id        String   @id @default(cuid())
  name      String   @default("Local User")
  currency  String   @default("USD")
  monthStartDay Int  @default(1)
  createdAt DateTime @default(now())
  accounts  Account[]
  categories Category[]
  rules     Rule[]
  budgets   Budget[]
  savingsGoals SavingsGoal[]
}

model Account {
  id             String            @id @default(cuid())
  userId         String
  user           User              @relation(fields: [userId], references: [id])
  type           AccountType
  name           String
  institution    String?
  currency       String
  openingBalance Float             @default(0)
  transactions   Transaction[]
  snapshots      BalanceSnapshot[]
  savingsGoals   SavingsGoal[]     @relation("GoalAccount")
  createdAt      DateTime          @default(now())
}

model Transaction {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  date         DateTime
  amount       Float
  merchant     String?
  description  String?
  categoryId   String?
  category     Category? @relation(fields: [categoryId], references: [id])
  accountId    String
  account      Account  @relation(fields: [accountId], references: [id])
  importSource String?
  rawDataJson  Json?
  notes        String?
  isTransfer   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  goalContributions GoalContribution[]

  @@index([date])
  @@index([accountId])
}

model Category {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  name          String
  group         String
  defaultBudget Float?   @default(0)
  transactions  Transaction[]
  budgets       Budget[]
}

model Budget {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  month      String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  limit      Float

  @@unique([month, categoryId])
}

model Rule {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  priority         Int
  matchType        MatchType
  pattern          String
  assignsCategoryId String?
  assignsCategory  Category? @relation(fields: [assignsCategoryId], references: [id])
  assignsAccountId  String?
  assignsAccount   Account? @relation(fields: [assignsAccountId], references: [id])
  createdAt        DateTime @default(now())
}

model SavingsGoal {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  name           String
  targetAmount   Float
  targetDate     DateTime
  linkedAccountId String?
  linkedAccount  Account? @relation("GoalAccount", fields: [linkedAccountId], references: [id])
  contributions  GoalContribution[]
  createdAt      DateTime @default(now())
}

model GoalContribution {
  id            String   @id @default(cuid())
  goalId        String
  goal          SavingsGoal @relation(fields: [goalId], references: [id])
  date          DateTime
  amount        Float
  transactionId String?
  transaction   Transaction? @relation(fields: [transactionId], references: [id])
}

model BalanceSnapshot {
  id        String   @id @default(cuid())
  accountId String
  account   Account  @relation(fields: [accountId], references: [id])
  date      DateTime
  balance   Float

  @@unique([accountId, date])
}
